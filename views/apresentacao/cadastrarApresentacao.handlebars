<div class="container-sm w-50 p-5 text-start">
<!--FORMULARIO-->
<form action="/cadastrarApresentacao" method="post">
    <p class="fs-4">Cadastrar apresentação</p> 

    <!--NOME DA MUSICA-->        
    <div class="row mb-1">
        <div class="col-sm-4">
            <label class="col-form-label">Nome da Música:</label> 
        </div>
        <div class="col">
            <input class="form-control" type="text" name="musica">
        </div>
    </div> 
    
    <!--INTEGRANTES-->        
    <div class="row mb-1">
        <div class="col-sm-4">
            <label class="col-form-label">Integrantes:</label> 
        </div>
        <div class="col">
            <input class="form-control" type="text" name="integrantes">
        </div>
    </div> 

    <!--BUTTON-->
    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
        <!--VOLTAR-->
        <a href="#" onclick="history.back()">
            <button type="button" class="btn btn-outline-danger">
                Voltar
            </button>
        </a>
        
        <!--CADASTRAR-->
        <button type="submit" class="btn btn-primary">Cadastrar</button>

    </div>
</form>
</div>