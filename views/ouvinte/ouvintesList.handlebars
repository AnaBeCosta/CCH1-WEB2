<!--TABELA-->
<div class="container mb-5 w-50">
    <table class="table">
    <p class="fs-4">Ouvintes cadastrados</p>
    <thead>
        <tr>
        <th scope="col">Nro</th>
        <th scope="col">RA</th>
        <th scope="col">Senha</th>
        </tr>
    </thead>
    {{#each ouvintes}}​
        <tr>
            <td>{{@index}}</td>​
            <td>{{ra}}</td>​
            <td>{{senha}}</td>​​​​
        </tr>​
    {{/each}}​
</table>
</div>

<!--EDITAR E EXCLUIR-->
<div  class="row">

    <!--EDITAR-->
    <div class="col-sm-6">
        <form action="/editarOuvinte" method="post" class="w-50">
        <p class="fs-4">Editar Ouvinte</p>
        
        <div class="row mb-1">
            <input type="text" class="form-control" name="ra" placeholder="RA">
            <input type="text" class="form-control" name="senha" placeholder="Nova Senha">
        </div>

        <!--BUTTON EDITAR-->
        <div class="d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-primary">Editar</button>
        </div>
        
        </form>
    </div>


    <!--DELETAR-->
    <div class="col-sm-6">
        <form action="/excluirOuvinte" method="post" class="w-50">
        <p class="fs-4">Deletar Ouvinte</p>
        
        <div class="row mb-1">
            <input type="text" class="form-control" name="ra" placeholder="RA">
        </div>

        <!--BUTTON DELETAR-->
        <div class="d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-primary float-right">Deletar</button>
        </div>
        
        </form>
    </div> 
</div>

<!--VOLTAR-->
<a href="#" onclick="history.back()">
    <button type="button" class="btn btn-outline-danger">
        Voltar
    </button>
</a>

